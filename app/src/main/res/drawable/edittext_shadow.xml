<!-- res/drawable/card_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This item creates the blue shadow effect -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_blue" /> <!-- Shadow color -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- This item is the actual card background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Card background color -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
