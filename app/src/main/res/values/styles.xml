<resources>
      <!-- Custom style for EditText with light blue shadow -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TownliftTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">70sp</item>
        <item name="android:text">Townlift</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Define a style for the CardView containers -->
    <style name="BtnContainerCard">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/edittext_shadow</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:outlineSpotShadowColor">@color/dark_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">66dp</item>
    </style>

    <style name="BtnContainerCard2">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/edittext_shadow</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:gravity">center</item>
        <item name="cardUseCompatPadding">true</item>

        <item name="android:outlineSpotShadowColor">@color/dark_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="IconifiedEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/input_label_color</item>
    </style>
    <style name="SendMessageInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/input_label_color</item>
    </style>
    <style name="Iput_label_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Define a style for the LinearLayouts inside CardViews -->
    <style name="BtnInsideLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Define a style for smaller TextViews in CardViews -->
    <style name="BtnTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AuthBottomText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>


    </style>
    <!-- Define a style for login text -->
    <style name="SmallBlueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">13sp</item>

    </style>


    <style name="auth_icons_rectangle_bg">
        <item name="android:height">15dp</item>
        <item name="android:width">15dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
